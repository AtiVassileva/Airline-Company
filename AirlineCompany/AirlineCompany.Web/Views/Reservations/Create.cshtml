@model ReservationFormModel

<h2>Резервация</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="FlightId" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MiddleName"></label>
        <input asp-for="MiddleName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PersonalIdNumber"></label>
        <input asp-for="PersonalIdNumber" class="form-control" />
        <span asp-validation-for="PersonalIdNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nationality"></label>
        <input asp-for="Nationality" class="form-control" />
        <span asp-validation-for="Nationality" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TicketId"></label>
        <select asp-for="TicketId" asp-items="Model.TicketTypes" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="LuggageId"></label>
        <select asp-for="LuggageId" asp-items="Model.LuggageTypes" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Потвърди резервация</button>
</form>