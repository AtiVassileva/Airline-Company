@model IEnumerable<ReservationListViewModel>

<h2>Моите резервации</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Полет</th>
        <th>От</th>
        <th>До</th>
        <th>Дата</th>
        <th>Пътник</th>
        <th>Билет</th>
        <th>Багаж</th>
        <th>Статус</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var res in Model)
    {
        <tr>
            <td>@res.FlightNumber</td>
            <td>@res.From</td>
            <td>@res.To</td>
            <td>@res.DepartureTime.ToString("g")</td>
            <td>@res.PassengerFullName</td>
            <td>@res.TicketType</td>
            <td>@res.LuggageType</td>
            <td>
                @if (res.IsCancelled)
                {
                    <span class="text-danger">Канселирана</span>
                }
                else
                {
                    @res.Status
                }
            </td>
            <td>
                @if (!res.IsCancelled && res.Status.ToLower() == "предстояща")
                {
                    <form asp-action="Cancel" asp-route-id="@res.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Канселирай</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>