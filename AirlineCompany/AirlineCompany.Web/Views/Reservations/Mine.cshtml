@model IEnumerable<ReservationListViewModel>

<h2>Моите резервации</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Полет</th>
        <th>От</th>
        <th>До</th>
        <th>Дата</th>
        <th>Пътник</th>
        <th>Билет</th>
        <th>Багаж</th>
        <th>Статус</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var res in Model)
    {
        <tr>
            <td>@res.FlightNumber</td>
            <td>@res.From</td>
            <td>@res.To</td>
            <td>@res.DepartureTime.ToString("g")</td>
            <td>@res.PassengerFullName</td>
            <td>@res.TicketType</td>
            <td>@res.LuggageType</td>
            <td>
                @if (res.IsCancelled)
                {
                    <span class="text-danger">Канселирана</span>
                }
                else
                {
                    @res.Status
                }
            </td>
            <td>
                @if (!res.IsCancelled && res.Status.ToLower() == "предстояща")
                {
                    <a asp-action="DownloadBoardingPass" asp-route-id="@res.Id" class="btn btn-primary">
                        Изтегли бордна карта
                    </a>
                    <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal" 
                       data-item-name="@($"{@res.From} до {@res.To}")" data-cancel-url="@($"/Reservations/Cancel/{res.Id}")" 
                       style="color: #fff;">
                        Канселирай
                    </a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>